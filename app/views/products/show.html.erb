<p id="notice"><%= notice %></p>

<div class="container product-show-wrapper">
  <div class="row">
    <% if user_signed_in? && current_user.admin? %>
      <div class="col-xs-12">
        <%= link_to 'Edit', edit_product_path(@product) %> |
        <%= link_to 'Back', products_path %> |
        <%= link_to 'Destroy', @product, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>
    <div class="col-xs-12 col-sm-8 product-box">
      <p class="product-name">
        <%= @product.name %>
      </p>
      
      <p class="product-description">
        <%= @product.description %>
      </p>
      <p class="product-price col-xs-12">
        <%= @product.price %> â‚¬
      </p>
      <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>
      <%= form_tag "/payments/create" do %>
        <%= render partial: "shared/stripe_checkout_button" %>
      <% end %>
    </div>
    <div class="col-xs-12 col-sm-4">
      <p class="product-image">
        <%= image_tag(@product.image_url, class: "img-responsive") %>
      </p>
    </div>
  
  </div>
  <%= render "new_comment" %>
  <%= render "comments" %>
  
</div>

